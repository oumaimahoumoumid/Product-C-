
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Espace Member";
}

    <span class="d-flex justify-content-center text-uppercase text-info font-weight-bolder">Welcome the best Admin</span>
    <div class=" d-flex justify-content-center" >
        <form asp-action="Login" method="post" class="d-flex flex-column justify-content-center w-50 card mt-4 p-4">
            <div class=" d-flex justify-content-center">
                <div class="form-group w-50">
                    @Html.DisplayName("Name")
                    <input name="Name" class="form-control" />
                </div>
            </div>
            <div class=" d-flex justify-content-center">
                <div class="form-group w-50">
                    @Html.DisplayName("Password")
                    <input type="password" name="Password" class="form-control" />
                </div>
            </div>
            <div class=" d-flex justify-content-center">
                <div asp-validation-summary="All" class="text-danger">
                    @ViewBag.Alert
                </div>
            </div>
            <div class=" d-flex justify-content-center">
                <div class="form-group">
                     <button type="submit" action="admin/acceuil" formmethod="post" class="btn btn-primary">Sign in</button>
                 </div>
            </div>
        </form>
    </div>
